generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}
model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String?
  password String
  createdAt DateTime @default(now())
  updateAt DateTime  @updatedAt
  tasks Task[]
}
model Task {
  id Int @id @default(autoincrement())
  title String
  description String?
  createdAt DateTime @default(now())
  updateAt DateTime  @updatedAt
  status String @default("NEW")
  priority String @default("MEDIUM")
  userId Int
  user User @relation(fields: [userId], references: [id])
  tags Tag[] 
}
model Tag {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
}